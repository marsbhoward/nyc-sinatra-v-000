<form action="/figures/<%= @figure.id %>" method="POST">
  Figure Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  Choose a title
  <% Title.all.each do |title|%>
  <label>
    <input type="checkbox"
      name="figure[title_ids][]"
      value="<%= title.id %>"
      id="title_<%= title.id%>"
      <%= 'checked' if @figure.titles.include?(title)%>
    <%= title.name %></label>
  <% end %>

  Create a new title
  Title Name: <input type="text" name="title[name]" id="new_title">

  choose a landmark
  <% Landmark.all.each do |landmark|%>
  <label>
    <input type="checkbox"
      name="figure[landmark_ids][]"
      value="<%= landmark.id %>"
      id="landmark_<%= landmark.id%>">
      <%= 'checked' if @figure.landmarks.include?(landmark) %>
    <%= landmark.name %></label>
  <% end %>

  Create a new landmark
  Landmark Name: <input type="text" name="landmark[name]" id="new_landmark">
  Landmark Year Constructed: <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

  <input type="submit" name="submit" id="submit" value="Edit Figure">
</form>
